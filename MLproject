# MLproject (root of repo)
name: mlops_group8_spotify

entry_points:

  main:
    parameters:
      steps:
        type: str
        default: all
        description: >-
          Comma-separated list of pipeline steps
          (e.g., "preprocess,features,model")
    command: >
      python src/main.py main.steps={steps}

  main_with_override:
    parameters:
      steps:
        type: str
        default: all
      hydra_options:
        type: str
        default: ""
        description: Extra overrides in standard Hydra syntax
    command: >
      python src/main.py main.steps={steps} {hydra_options}
